<h1> Listing all the Skills</h1>

<table>
  <tr>
    <th> Skill Name</th>
  </tr>
<% @skills.each do |skill| %>
  <tr>
    <td><%= skill.skill %></td>
    <td><%= link_to 'Show', skill_path(skill) %></td>
    <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
    <td><%= link_to 'Destroy', skill_path(skill),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>

  </tr>
<%end%>
</table>
